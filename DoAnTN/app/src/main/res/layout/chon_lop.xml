<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_root"
    android:background="@mipmap/background">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnLop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp 1"
            android:background="@drawable/button_main"
            android:layout_marginRight="30px"
            />
        <Button
            android:id="@+id/btnLop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp 2"
            android:background="@drawable/button_main"
            android:layout_toRightOf="@id/btnLop1"
            android:layout_marginRight="30px"
            />
        <Button
            android:id="@+id/btnLop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp 3"
            android:layout_toRightOf="@id/btnLop2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_main"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btnSound"
        android:background="@mipmap/sound_off_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="10px"
        android:layout_width = "30dp"
        android:layout_height= "30dp"
        android:scaleType="fitXY"
        android:text="On"
        android:textSize="0sp"
        />
    <ImageButton
        android:id="@+id/btnBack"
        android:src="@mipmap/backgreen"
        android:background="@null"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_width = "30dp"
        android:layout_height= "30dp"
        android:scaleType="fitXY"
        />
</RelativeLayout>